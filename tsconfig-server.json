{
    "include": [
        "./src/server/**/*",
    ],
    "exclude": [
        "./output/",
        "./src/app/**/*",
        "babel.config.js",
        "webpack.config.app-i18n.js",
        "webpack.config.app.development.js"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": ".",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "outDir": "./output",
        "sourceMap": false,
        "inlineSourceMap": false,
        "allowJs": true,
        "target": "ESNext",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "watch": false,
        "skipLibCheck": true
    }
}
