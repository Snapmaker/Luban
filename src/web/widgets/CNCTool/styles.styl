@import "../../styles/variables"
@import "../styles.styl"


.select-tool
    display: inline-block
    margin: 0 18px 15px 0

    .select-tool-btn
        display: block
        border-radius: $border-radius
        border: 1px solid $light-grey-color

        > img
            border-radius: $border-radius

        &.selected
            border: 2px solid $btn-border-color-large-blue

    .select-tool-text
        margin-top: 8px
        float: left
        width: 100%
        text-align: center
