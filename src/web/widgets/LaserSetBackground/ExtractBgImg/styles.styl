@import "../styles.styl"

.extract-bg-img
    margin: 0 25px 0 25px
    border: 1px solid $light-grey-color

    .extract-actions
        display: inline-block
        padding: 0 15px 0 0
        width: 25%

        &__btn
            display: block

            > i
                display: block
                margin-top: 8px
                width: 100%
                height: 30px

            > img
                width: 100%
                height: 30px

        &__icon-conform
            background: url("./images/conform.png") no-repeat center
            background-size: 25%
        &__icon-reset
            background: url("./images/reset.png") no-repeat center
            background-size: 25%
        &__icon-upload
            background: url("./images/upload.png") no-repeat center
            background-size: 25%

        &__text
            float: left
            width: 100%
            vertical-align: top
            color: $grey-color

        &.selected
            .extract-actions__btn
                border: 2px solid $dark-blue-color
            .extract-actions__text
                color: $dark-blue-color
