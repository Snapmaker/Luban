    color: $btn-danger-color
    border-color: $btn-danger-background-color-hover

    &[disabled]:hover
    &[disabled]:focus
        background-color: $btn-danger-background-color
        color: $btn-danger-color
    &:hover
    &:focus
        background-color: $btn-danger-background-color-hover
        color: $btn-danger-color-hover

.fa-btn
    width: 20px
    height: 20px
    line-height: 20px
    text-align: center

    &:hover
        opacity(.5)
    &:active
        opacity(.3)

.input
    height: 34px
    padding: 6px 12px
    font-size: 13px
    line-height: 1.42857143
    color: $text-color
    border-width: $border-width
    border-style: solid
    border-radius: $border-radius
    border-color: $light-grey-color

    &.input-narrow
        padding: 6px

.description-text
    color: $grey-color
    font-size: 14px

// widget
.widget-content
    position: relative
    padding: 18px 12px

    &.hidden
        display: none

// parameter widgets
.parameter-table
    width: 100%
    :global
        tbody
            &>tr
                &>td
                    position: relative
                    padding: 0 4px 6px
            &>tr:last-of-type
                &>td
                    padding: 0 4px

        td:first-child
            width: 100px

    .unit
        position: absolute
        right: 10px
        top: 8px
        color: $grey-color
