@import "../styles/variables.styl"

$z-index-float = 500

button:focus
    outline: 0

// Mixin
btn-basic-style()
    display: inline-block
    padding: 5px 12px
    margin-bottom: 0
    font-weight: normal
    font-size: 13px
    line-height: 1.42857143
    text-align: center
    white-space: inherit
    vertical-align: middle
    cursor: pointer
    user-select: none
    border-width: 1px
    border-style: solid
    border-radius: $border-radius

    &[disabled],
    &[disabled]:hover
        cursor: not-allowed
        opacity: .65

    &:active
        opacity: .65

// separator without margin on top and bottom
.separator
    display: block
    margin: 10px 0
    padding: 0
    height: 1px
    border: 0;
    border-top: 1px solid $border-color

    &.separator-underline
        margin: 0 0 10px

.btn
    btn-basic-style()
    height: 34px // bootstrap

.btn-small
    btn-basic-style()
    height: $btn-size-small

.btn-large
    btn-basic-style()
    height: $btn-size-large

// btn-default: white background-color, blue color
.btn-default
    background-color: $btn-default-background-color
    color: $btn-default-color
    border-color: $btn-default-background-color-hover

    &[disabled]:hover
    &[disabled]:focus
        background-color: $btn-default-background-color
        color: $btn-default-color

    &:hover
    &:focus
        background-color: $btn-default-background-color-hover
        color: $btn-default-color-hover

    &:active
        opacity(.3)

// btn-primary: blue background-color, white color
