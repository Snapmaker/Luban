    color: $btn-danger-color
    border-color: $btn-danger-background-color-hover

    &[disabled]:hover
    &[disabled]:focus
        background-color: $btn-danger-background-color
        color: $btn-danger-color

    &:hover
    &:focus
        background-color: $btn-danger-background-color-hover
        color: $btn-danger-color-hover

.fa-btn
    width: 20px
    height: 20px
    line-height: 20px
    text-align: center

    &:hover
        opacity(.5)

    &:active
        opacity(.3)

.input
    height: 34px
    padding: 6px 12px
    font-size: 13px
    line-height: 1.42857143
    color: $text-color
    border-width: $border-width
    border-style: solid
    border-radius: $border-radius
    border-color: $grey-color2

    &.input-narrow
        padding: 6px

.description-text
    color: $grey-color
    font-size: 14px

// widget
.widget-content
    position: relative
    padding: 18px 12px

    &.hidden
        display: none

// parameter widgets
.parameter-table
    width: 100%

    :global
        tbody
            & > tr
                & > td
                    position: relative
                    padding: 0 4px 6px

            & > tr:last-of-type
                & > td
                    padding: 0 4px

        td:first-child
            width: 100px

    .unit
        position: absolute
        right: 10px
        top: 8px
        color: $grey-color

// Container for parameter styling
.parameter-container
    display: block

    .parameter-header
        display: block
        width: 100%
        background-color: #eee
        height: 28px
        line-height: 28px
        margin-bottom: 10px

        &__indicator
            width: 22px
            height: 22px
            text-align: center
            vertical-align: baseline

            &.pull-right
                float: right
                margin-top: 6px

        &__title
            padding: 0
            color: $dark-color

    // Single row parameter
    .parameter-row
        position: relative
        margin: 8px 0
        line-height: 34px
        height: 34px

        &__label
            display: inline-block
            width: 120px
            line-height: 13px
        &__label-lg
            display: inline-block
            width: 180px
            line-height: 13px
        &__input
        &__select
            float: right
            width: 120px
        &__input-lg
        &__select-lg
            float: right
            width: 180px
        &__input-unit
            position: absolute
            right: 12px
            color: $grey-color
        &__checkbox
            float: right
            height: 26px
            margin-right: 8px



.visualizer-content {
    min-width: 320px;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.canvas-content {
    position: absolute;
    top: 32px;
    right: 0;
    bottom: 32px;
    left: 0;
}

.canvas-header {
    background-color: #FFF;
    height: 32px;
    padding: 4px 8px;
    border-bottom: 1px solid #ccc;
}

.canvas-footer {
    border-top: 1px solid #ccc;
    background-color: #FFF;
    height: 32px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}
.visualizer-info
    z-index: $z-index-float
    position: absolute
    right: 12px
    bottom: 38px

    p
        text-align: right
        margin: 0 0 4px

.progress-bar
    z-index: $z-index-float
    position: absolute
    bottom: 32px
    left: 0
    width: 100%
    height: 6px
    overflow: hidden
    background-color: $white-color

    .progress
        height: 100%
        float: left
        background-color: $blue-color
