@import "../../styles/variables"
@import "../styles.styl"

.laser-modes
    // cancel out last laser-mode right padding
    margin: 0 -10px 0 0

    .laser-mode
        display: inline-block
        padding: 0 10px 0 0
        width: 25%

        .laser-mode-btn
            display: block
            border-radius: $border-radius
            border: 1px solid $light-grey-color

            > img
                border-radius: $border-radius
                width: 100%
                height: 68px

            &.selected
                border: 2px solid $btn-border-color-large-blue

        .laser-mode-text
            margin-top: 8px
            float: left
            width: 100%
            text-align: center
