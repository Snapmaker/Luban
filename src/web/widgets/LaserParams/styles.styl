@import "../../styles/variables"
@import "../styles.styl"

.trace-title
    display: block
    font: bold 24px "Arial Black", Gadget, sans-serif
    margin: 10px 0
    text-align: center

.trace-status
    margin: 0 0 0 0
    padding: 6px 0 0 0

.trace-table
    width: 100%
    float: center

.trace-td-title
    width: 10%
    margin: 0 0 0 0
    padding: 6px 0 6px 0

.trace-td-title-p
    padding: 9px 0 0 0

.trace-td-slider
    width: 90%
    margin: 0 0 0 0
    padding: 0 12px 0 12px

.trace-td-div
    margin: 0 0 12px 12px
    padding: 6px 6px 6px 6px

.trace-td-image
    padding: 0 0 0 0 

.trace-btn-div
    margin: 0 0 0 0
    padding: 6px 0 6px 66px 

.trace-image-div
    margin: 0 0 0 0
    padding: 0 0 0 0 
    float: left

.laser-modes
    // cancel out last laser-mode right padding
    margin: 0 -10px 0 0

    .laser-mode
        display: inline-block
        vertical-align: top
        padding: 0 10px 0 0
        width: 25%

        &__btn
            display: block
            border-radius: $border-radius
            border: 1px solid $grey-color2

            > i
                display: block
                border-radius: $border-radius
                width: 100%
                height: 68px

            > img
                border-radius: $border-radius
                width: 100%
                height: 68px

        &__icon-bw
            background: url("./images/laser-mode-bw-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-greyscale
            background: url("./images/laser-mode-greyscale-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-vector
            background: url("./images/laser-mode-vector-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-text
            background: url("./images/laser-mode-text-88x88.png") no-repeat 0 0
            background-size: 100%

        &__text
            margin-top: 8px
            float: left
            width: 100%
            text-align: center
            vertical-align: top

        &.selected
            .laser-mode__btn
                border: 2px solid $dark-blue-color
            .laser-mode__text
                color: $dark-blue-color
