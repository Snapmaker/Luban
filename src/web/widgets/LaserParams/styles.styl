@import "../../styles/variables"
@import "../styles.styl"


.laser-mode
    display: inline-block
    margin: 0 10px 0 0

    .laser-mode-btn
        display: block
        border-radius: $border-radius
        border: 1px solid $light-grey-color

        > img
            border-radius: $border-radius
            width: 68px
            height: 68px

        &.selected
            border: 2px solid $btn-border-color-large-blue

    .laser-mode-text
        margin-top: 8px
        float: left
        width: 100%
        text-align: center
