@import "../variables";

.workspace {
    .dropzone-overlay {
        position: fixed;
        top: $navbar-height;
        bottom: 0;
        left: $sidebar-width;
        right: 0;
        z-index: 100;
        background-color: rgba(255, 255, 255, .5);
        border: 4px dashed #286090;
        text-align: center;
        pointer-events: none;

        &.hidden {
            display: none;
        }

        .text-block {
            position: absolute;
            top: 25%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #666;
            font-size: 32px;
        }
    }
    .dropzone {
        height: 100%;
    }

    .workspace-table {
        display: table;
        width: 100%;
        height: 'calc(100vh - %s)' % ($navbar-height);
    }
    .workspace-table-row {
        display: table-row;
    }

    .primary-container,
    .secondary-container,
    .primary-toggler,
    .secondary-toggler,
    .default-container {
        display: table-cell;
        position: relative;
    }
    .primary-container {
        border-right: 1px solid #ccc;
    }
    .secondary-container {
        border-left: 1px solid #ccc;
    }
    .primary-container {
        vertical-align: top;
        background-color: #f6f7f8;
        width: 360px;
        max-width: 360px;
        min-width: 360px;
        padding: 10px 6px 10px 10px;

        &.hidden {
            display: none;
        }

        .toolbar {
            clearfix();
            margin-top: 5px;
            margin-bottom: 5px;
        }
    }
    .secondary-container {
        z-index: 20;
        vertical-align: top;
        background-color: #f6f7f8;
        width: 360px;
        max-width: 360px;
        min-width: 360px;
        padding: 10px 10px 10px 6px;

        &.hidden {
            display: none;
        }

        .toolbar {
            clearfix();
            margin-top: 5px;
            margin-bottom: 5px;
        }
    }
    .primary-toggler,
    .secondary-toggler {
        z-index : 10;
        width : 12px;
        position : fixed;
        padding-top : 0px;
        height: 100%;
        background : transparent;

        button {

            padding : 0px 1px;
            border : 0px;
            border-radius : 0px;
            background: transparent;
            height: 30px;
            top : 0;
            bottom : 0;
            margin : auto;
            position : absolute;
        }
    }
    .primary-toggler button {
        border-top: 1px solid #ccc;
        border-right: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
    }
    .secondary-toggler button {
        border-top: 1px solid #ccc;
        border-left: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
    }

    .default-container {
        min-width: 360px;

        &.fixed {
            position: fixed;
            left: 360px;
            right: 360px;
            top: ($navbar-height + 1);
            bottom: 0;
        }
    }
}
