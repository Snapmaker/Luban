.expandable-start
.expandable-end
    display: table

    .expandable-separator
        display: table-cell
        width: 100%
        height: 21px
        position: relative

        &> .expandable-separator-inner
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            height: 1px
            width: 100%
            background-color: #c8c8c8

    &.show
        margin-bottom: 10px

.icon
    display: inline-block
    width: 14px
    height: 14px

    &.icon-checked
        background-image: url("/images/14x14/checked-on-14x14.png")
    &.icon-unchecked
        background-image: url("/images/14x14/checked-off-14x14.png")
