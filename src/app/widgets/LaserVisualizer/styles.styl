  @import "../../styles/variables.styl"

$z-index-float = 500
$visualizer-padding = 10px

// widget
.widget-content
    min-width: 320px
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0

// visualizer
.visualizer-content
    position: absolute
    top: 0
    right: 0
    bottom: 32px
    left: 0

.visualizer-footer {
    border-top: 1px solid #ccc;
    background-color: #FFF;
    height: 32px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}
.visualizer-info
    z-index: $z-index-float
    position: absolute
    right: 12px
    bottom: 38px

    p
        text-align: right
        margin: 0 0 4px

.visualizer-notice
    z-index: 500
    position: absolute
    left: 6px
    bottom: 32px

.visualizer-progress
    z-index: 500
    position: absolute
    bottom: 32px
    left: 0
    width: 100%
    height: 6px

.visualizer-top-left
    position: absolute
    top: $visualizer-padding
    left: $visualizer-padding
    z-index: 500

    .btn-top-left
        display: inline-block
        position: relative
        float: left
        width: 60px
        height: 30px
        background-color: #FFF
        margin-left: 10px
        padding: 0
        border: 1px solid $border-color
        border-radius: $border-radius

        .btn-undo
        .btn-redo
        .btn-reset
        .btn-remove
            width: 100%
            height: 100%
            background-repeat: no-repeat
            background-position: center
        .btn-undo
            background-image: url("/images/14x14/undo-normal-14x14.png")
        .btn-redo
            background-image: url("/images/14x14/redo-normal-14x14.png")
        .btn-reset
            background-image: url("/images/14x14/reset-normal-14x14.png")
        .btn-remove
            background-image: url("/images/14x14/delete-normal-14x14.png")
        &:hover
            background-color: $btn-default-background-color-hover
            .btn-undo
                background-image: url("/images/14x14/undo-hover-14x14.png")
            .btn-redo
                background-image: url("/images/14x14/redo-hover-14x14.png")
            .btn-reset
                background-image: url("/images/14x14/reset-hover-14x14.png")
            .btn-remove
                background-image: url("/images/14x14/delete-hover-14x14.png")
        &:disabled
