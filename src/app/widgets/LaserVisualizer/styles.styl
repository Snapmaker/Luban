@import "../styles.styl"

$z-index-float = 500
$visualizer-padding = 10px

// separator without margin on top and bottom
.separator
    display: block
    margin: 10px 0
    padding: 0
    height: 1px
    border: 0;
    border-top: 1px solid $border-color

    &.separator-underline
        margin: 0 0 10px


.fa-btn
    width: 20px
    height: 20px
    line-height: 20px
    text-align: center

    &:hover
        opacity(.5)

    &:active
        opacity(.3)

.input
    height: 34px
    padding: 6px 12px
    font-size: 13px
    line-height: 1.42857143
    color: $text-color
    border-width: $border-width
    border-style: solid
    border-radius: $border-radius
    border-color: $grey-color2

    &.input-narrow
        padding: 6px

.description-text
    color: $grey-color
    font-size: 14px

// widget
// TODO: remove
.widget-content
    position: relative
    padding: 18px 12px

    &.hidden
        display: none

// parameter widgets
.parameter-table
    width: 100%

    :global
        tbody
            & > tr
                & > td
                    position: relative
                    padding: 0 4px 6px

            & > tr:last-of-type
                & > td
                    padding: 0 4px

        td:first-child
            width: 100px

    .unit
        position: absolute
        right: 10px
        top: 8px
        color: $grey-color


.visualizer-content {
    min-width: 320px;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.canvas-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 32px;
    left: 0;
}

.canvas-footer {
    border-top: 1px solid #ccc;
    background-color: #FFF;
    height: 32px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}
.visualizer-info
    z-index: $z-index-float
    position: absolute
    right: 12px
    bottom: 38px

    p
        text-align: right
        margin: 0 0 4px

.visualizer-top-right {
    position: absolute
    top: $visualizer-padding
    right: $visualizer-padding
    z-index: 500
    width: 10%
}

.visualizer-top-left
    position: absolute
    top: $visualizer-padding
    left: $visualizer-padding
    z-index: $z-index-float

    .btn-top-left
        display: inline-block
        position: relative
        float: left
        width: 60px
        height: 30px
        background-color: #FFF
        margin-left: .5rem
        padding: 0
        border: 1px solid $border-color
        border-radius: $border-radius

        .btn-text
            height: 100%
            background: url("../../images/cnc-laser/text-45x30.jpg") no-repeat 0 0
            background-size: 100%
        .btn-undo
        .btn-redo
        .btn-reset
        .btn-remove
            width: 100%
            height: 100%
            background-repeat: no-repeat
            background-position: center
        .btn-undo
            background-image: url("/images/14x14/undo-normal-14x14.png")
        .btn-redo
            background-image: url("/images/14x14/redo-normal-14x14.png")
        .btn-reset
            background-image: url("/images/14x14/reset-normal-14x14.png")
        .btn-remove
            background-image: url("/images/14x14/delete-normal-14x14.png")
        &:hover
            background-color: $btn-default-background-color-hover
            .btn-undo
                background-image: url("/images/14x14/undo-hover-14x14.png")
            .btn-redo
                background-image: url("/images/14x14/redo-hover-14x14.png")
            .btn-reset
                background-image: url("/images/14x14/reset-hover-14x14.png")
            .btn-remove
                background-image: url("/images/14x14/delete-hover-14x14.png")
        &:disabled
            opacity(.5)
            .btn-undo
                background-image: url("/images/14x14/undo-disabled-14x14.png")
            .btn-redo
                background-image: url("/images/14x14/redo-disabled-14x14.png")
            .btn-reset
                background-image: url("/images/14x14/reset-disabled-14x14.png")
            .btn-remove
                background-image: url("/images/14x14/delete-disabled-14x14.png")

.visualizer-center
    z-index: $z-index-float
    position: absolute
    left: $visualizer-padding
    top: 50%
    transform: translate(0, -50%)

    .btn-center
        display: block
        position: relative
        top: -70px
        width: 56px
        height: 56px
        padding: 0
        border: 0

        .btn-text
            height: 100%
            background: url("../../images/cnc-laser/text-224x224.png") no-repeat 0 0
            background-size: 100%
