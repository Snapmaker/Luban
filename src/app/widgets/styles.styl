@import "../styles/variables.styl"

$z-index-float = 500
$visualizer-padding = 10px

// separator without margin on top and bottom
.separator
    display: block
    margin: 10px 0
    padding: 0
    height: 1px
    border: 0;
    border-top: 1px solid $border-color

    &.separator-underline
        margin: 0 0 10px


.fa-btn
    width: 20px
    height: 20px
    line-height: 20px
    text-align: center

    &:hover
        opacity(.5)

    &:active
        opacity(.3)

.input
    height: 34px
    padding: 6px 12px
    font-size: 13px
    line-height: 1.42857143
    color: $text-color
    border-width: $border-width
    border-style: solid
    border-radius: $border-radius
    border-color: $grey-color2

    &.input-narrow
        padding: 6px

.description-text
    color: $grey-color
    font-size: 14px

// widget
// TODO: remove
.widget-content
    position: relative
    padding: 18px 12px

    &.hidden
        display: none

// parameter widgets
.parameter-table
    width: 100%

    :global
        tbody
            & > tr
                & > td
                    position: relative
                    padding: 0 4px 6px

            & > tr:last-of-type
                & > td
                    padding: 0 4px

        td:first-child
            width: 100px

    .unit
        position: absolute
        right: 10px
        top: 8px
        color: $grey-color


.visualizer-content {
    min-width: 320px;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.canvas-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 32px;
    left: 0;
}

.canvas-footer {
    border-top: 1px solid #ccc;
    background-color: #FFF;
    height: 32px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}

.visualizer-info
    z-index: $z-index-float
    position: absolute
    right: 12px
    bottom: 38px

    p
        text-align: right
        margin: 0 0 4px

.visualizer-progress {
    z-index: 500
    position: absolute
    bottom: 32px
    left: 0
    width: 100%
    height: 6px
}
