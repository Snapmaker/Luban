@import "../../styles/variables"
@import "../styles.styl"

.input-box-left
    margin-left: 2px
    width: 85px
    height: 30px

.input-box-right
    width: 85px

.input-box-inner-text {
    width: 15px
    text-align: center
}

.text-align-wrap
    float: right
    border: 0

    .text-align-button
        padding: 0 20px
        border: #c8c8c8
        background-color: white

        &:first-child
            border-right: 0
            border-top-left-radius: 4px
            border-bottom-left-radius: 4px

        &:last-child
            border-top-right-radius: 4px
            border-bottom-right-radius: 4px
            border-left: 0

        &:hover
            background-color: #E7F2FD

    .active
        background-color: #E7F2FD


.trace-title
    display: block
    font: bold 24px "Arial Black", Gadget, sans-serif
    margin: 10px 0
    text-align: center

.trace-status
    float: left
    font: 16px
    margin: 0
    padding: 0

.trace-table
    width: 100%
    float: center
    margin: 10px 0

.trace-td-title
    font: 16px
    width: 10%
    margin: 0
    padding: 0

.trace-td-title-p
    padding: 0

.trace-td-slider
    width: 90%
    margin: 0
    padding: 10px 12px 20px

.trace-td-div
    margin: 0 0 12px 12px
    padding: 6px

.trace-td-image
    padding: 0

.trace-btn-div
    float: right
    margin: 0
    padding: 6px 0

.trace-image-div
    margin: 0
    padding: 0
    float: left

.laser-modes
    // cancel out last laser-mode right padding
    margin: 0 -10px 0 0

    .laser-mode
        display: inline-block
        vertical-align: top
        padding: 0 10px 0 0
        width: 25%

        &__btn
            display: block
            border-radius: $border-radius
            border: 1px solid $grey-color2

            > i
                display: block
                border-radius: $border-radius
                width: 100%
                height: 68px

            > img
                border-radius: $border-radius
                width: 100%
                height: 68px

        &__icon-bw
            background: url("../../images/cnc-laser/laser-mode-bw-88x88.png") no-repeat 0 0
            background-size: 100%

        &__icon-greyscale
            background: url("../../images/cnc-laser/laser-mode-greyscale-88x88.png") no-repeat 0 0
            background-size: 100%

        &__icon-vector
            background: url("../../images/cnc-laser/laser-mode-vector-88x88.png") no-repeat 0 0
            background-size: 100%

        &__icon-text
            background: url("../../images/cnc-laser/laser-mode-text-88x88.png") no-repeat 0 0
            background-size: 100%

        &__icon-halftone
            background: url("../../images/cnc-laser/laser-mode-halftone-88x88.png") no-repeat 0 0
            background-size: 100%

        &__text
            margin-top: 8px
            float: left
            width: 100%
            text-align: center
            vertical-align: top

        &.selected
            .laser-mode__btn
                border: 2px solid $dark-blue-color

            .laser-mode__text
                color: $dark-blue-color

.icon_size_lock {
    background: url("../../images/cnc-laser/property-lock-checked-88x88.png") no-repeat 0 0
    background-size: 100%
    background-position: center
    border: 0

    &:hover {
        background-color: #e4e4e4
        opacity(1)
    }
}

.icon_size_unlock {
    background: url("../../images/cnc-laser/property-lock-unchecked-88x88.png") no-repeat 0 0
    background-size: 100%
    background-position: center
    border: 0

    &:hover {
        background-color: #e4e4e4
        opacity(1)
    }
}

.icon_flip_vertically
    height: 30px
    width: 30px
    display: inline-block
    vertical-align: bottom
    background: url("../../images/cnc-laser/Flip-vertically-30x30.png") no-repeat 0 0
    background-size: 100%
    background-position: center
    border: 1px solid #C8C8C8
    border-radius: 4px

    &:hover
    &:active
        background-color: #e4e4e4
        opacity(1)

.icon_flip_horizontal
    height: 30px
    width: 30px
    display: inline-block
    vertical-align: bottom
    background: url("../../images/cnc-laser/horizontal flip_30x30.png") no-repeat 0 0
    background-size: 100%
    background-position: center
    border: 1px solid #C8C8C8
    border-radius: 4px

    &:hover
    &:active
        background-color: #e4e4e4
        opacity(1)
