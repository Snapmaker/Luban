@import "../styles.styl"

.bt
    &:hover
        opacity(.5)
    &:active
        opacity(.3)

.name
    vertical-align: middle
    margin-top: -10px
    line-height: 36px
    height: 36px
    display: inline-block
    width: 120px

.object-list-box
    margin: -15px -10px -25px -10px
    max-height: 150px
    overflow: auto
    background: #FAFAFA

.bgr
    width: 330px
    height: 30px
    background-color: unset
    background-size: 30px

.selected
    background-color: aliceblue

.icon
    vertical-align: middle
    width: 36px
    height: 36px
    margin-left: 10px
    margin-right: -10px
    margin-top: 6px

    &.icon-shape
        background: url("./images/list_ic_shape_18x18@2x.png") no-repeat 0 0
        display: inline-block
    &.icon-pic
        background: url("./images/list_ic_pic_18x18@2x.png") no-repeat 0 0
        display: inline-block
    &.icon-text
        background: url("./images/list_ic_text_18x18@2x.png") no-repeat 0 0
        display: inline-block
    &.icon-hide-open
        background: url("./images/list_ic_open_18x18@2x.png") no-repeat 0 0
        margin-left: 138px
        border: none
    &.icon-hide-close
        background: url("./images/list_ic_close_18x18@2x.png") no-repeat 0 0
        margin-left: 138px
        border: none
