@import "../../styles/variables"

.separator
    display: block
    margin: 10px 0
    padding: 0
    height: 1px
    border: 0;
    border-top: 1px solid $border-color


.laser-modes
    // cancel out last laser-mode right padding
    margin: 0 -10px 0 0

    .laser-mode
        display: inline-block
        vertical-align: top
        padding: 0 10px 0 0
        width: 25%

        &__btn
            display: block
            border-radius: $border-radius
            border: 1px solid $grey-color2

            > i
                display: block
                border-radius: $border-radius
                width: 100%
                height: 68px

            > img
                border-radius: $border-radius
                width: 100%
                height: 68px

        &__icon-greyscale
            background: url("./images/laser-mode-greyscale-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-vector
            background: url("./images/laser-mode-vector-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-text
            background: url("./images/laser-mode-text-88x88.png") no-repeat 0 0
            background-size: 100%

        &__text
            margin-top: 8px
            float: left
            width: 100%
            text-align: center
            vertical-align: top

        &.selected
            .laser-mode__btn
                border: 2px solid $dark-blue-color
            .laser-mode__text
                color: $dark-blue-color
