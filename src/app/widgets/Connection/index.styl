@import "../styles.styl"

.select-tools
    // cancel out last right padding
    margin: 0 -15px 0 0

    .select-tool
        display: inline-block
        padding: 0 18px 15px 0
        width: 33%

        .select-tool-btn
            display: block
            border-radius: $border-radius
            border: 1px solid $grey-color2

            > img
                border-radius: $border-radius

            &.selected
                border: 2px solid $dark-blue-color

        .select-tool-text
            margin-top: 8px
            float: left
            width: 100%
            text-align: center

.connection-state
    width: 100%
    &-name
        font-size: $font-size-lead
    &-icon
        float: right;
        font-size: $font-size-lead
        margin-right: 12px
        i
            vertical-align: middle

.connection-state-head
    &-name
        color: $grey-color
    &-icon
        float: right;
        i
            font-size: $font-size-base
            vertical-align: middle
.color-grey-color
    color: $grey-color

.vertical
    height: 100%
    position: absolute
    top: 0
    border-right: 1px solid $grey-color
