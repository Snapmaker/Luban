.widgets {
    min-height: 240px; // Keep a minimum space for dropping widgets

    :global {
        // Class name for the chosen item
        .sortable-chosen {
            opacity: .8;
        }

        // Class name for the drop placeholder
        .sortable-ghost {
            opacity: .4;
        }
    }
    .canvas-footer {
        border-top: 1px solid #ccc;
        background-color: #FFF;
        height: 32px;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }
}
