@import "../variables.styl"

.fa-btn
    width: 20px
    height: 20px
    line-height: 20px
    text-align: center

    &:hover
        opacity(.5)

    &:active
        opacity(.3)

.settings-panel
    position: relative;
    width: 100%;
    height: 100%;
.developer-panel
    position: absolute;
    left: 0;
    top: 0;
    width: 400px;
    max-width: 400px;
    min-width: 400px;
    padding: 10px 6px 10px 6px
    border: 1px solid #ccc;
    margin: 5px;
.developer-panel-right
    margin-left: 410px;
    width: 600px;
    vertical-align: top;
    padding: 10px 6px 10px 6px
    border: 1px solid #ccc;

.btn-cal
    width: 60px
    height: 40px
    margin: 6px 18px 6px 0px

.btn-func
    width: 90px
    height: 40px
    margin: 12px 36px 12px 0px
    // color: #fff;
    // background-color: #404040;
    // border-color: #383838;

.input-cal
    width: 60px
    height: 40px
    text-align: center
    margin: 6px 18px 6px 0px

.input-normal
    width: 60px
    height: 40px
    text-align: center
    margin: 6px 6px 6px 6px

primary-tab
