@import "../variables.styl"

//
// keep layout style the same as laser container
// we will refactor them together later. 20190820
//
.laser-table {
    display: table;
    width: 100%;
    height: 'calc(100vh - %s)' % (50px);
}
.laser-table-row {
    display: table-row;
}

.view-space {
  position: fixed;
  left: $sidebar-width
  right: 360px;
  top: 50px;
  bottom: 0;
  border-right: 1px solid #ccc;
  display: table-cell;
}

.control-bar
    display: table-cell
    width: 360px
    min-width: 360px
    max-width: 360px
    right: 0
    padding: 10px 6px
    background-color: #f6f7f8

//
// SVG Editor styles
//
$padding = 10px

.svg-content
    background: -webkit-gradient(radial, center center, 3, center center, 1000, from(#bbb), to(#222))
    position: relative
    width: 100%
    height: 100%

.svg-control-bar
    //position: relative
    margin-bottom: 20px

