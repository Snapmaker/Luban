@import "../../../styles/global-var.styl";

.override-select {
    display: inline-block;
    .highest-large{
        width: 288px;
    }
    .super-large{
        width: 200px;
    }
    .large{
        width: 160px;
    }
    .middle{
        width: 120px;
    }
    .small{
        width: 64px;
    }
    :global(.ant-select){
        //width: 100px;
        border: none!important;
        color: $black-3;
        border-radius: 8px!important;
        :global(div.ant-select-selector) {
            padding: 0 8px;
            border: 1px solid #B9BCBF;
            border-radius: 8px!important;
        }
    }
    :global(div.ant-select-disabled) {
        :global(div.ant-select-selector) {
            background: $grey-3 !important;
            color: $black-5 !important;
            border: 1px solid $grey-1;
        }
    }
    :global(.ant-select-selection-item) {
        text-align: left;
    }
}

:global(.ant-select-dropdown){
    width: 120%
}

:global(div.ant-select-dropdown) {
    width: auto !important;
    max-width: 320px;
    border: 1px solid $black-5;
    border-radius: $px-grade-4;
    :global(.ant-select-item) {
        padding: 5px 8px;
        color: $black-3;
    }
    :global(.ant-select-item-option-active:not(.ant-select-item-option-disabled)) {
        background: $grey-2;
    }
    :global(.ant-select-item-option-selected:not(.ant-select-item-option-disabled)) {
        background: $blue-6;
        color: $black-3;
        font-weight: $font-weight-normal;
    }
    :global(.ant-select-item-option-disabled) {
        color: $black-5;
    }
}

:global(div.ant-tree-select-dropdown) {
  width auto !important;
  max-width: 200px;
  padding: 4px 0 !important;
  :global(.ant-select-tree-list-holder) {
    :global(.ant-select-tree-switcher-noop) {
      display: none;
    }
    :global(.ant-select-tree-treenode) {
      height 32px
      padding 0 !important
      width 100%
    }
    :global(.ant-select-tree-node-selected) {
      background: #E7F3FF !important;
    }
    :global(.ant-select-tree-node-content-wrapper) {
      color: $black-3;
      height 32px;
      line-height 32px;
      padding-left: 24px;
      width 100%
      :global(.ant-select-tree-title) {
        max-width 278px;
        display: inline-block;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        width 100%
      }
      &:hover {
        background: #EEEFF0;
      }
    }
    :global(.ant-select-tree-treenode-disabled) {
      :global(.ant-select-tree-node-content-wrapper) {
        padding-left 12px;
      }
      :global(.ant-select-tree-title) {
        color: $black-5 !important
      }
    }
  }
}
