.material-item {
    position: relative;
    .material-more-action {
        position: absolute;
        visibility hidden
        right: 18px;
        background: #ffffff;
    }
    &:hover {
        .material-more-action {
            visibility: visible;
        }
    }
}
.custom-message {
    padding: 6px;
   :global(.ant-message-info)  :global(.anticon){
        font-size: 24px!important;
        top: -3px!important;
   }
}

.diameter-item {
    .close-icon {
        visibility: hidden;
    }
    &:hover {
        .close-icon {
            visibility visible
        }
    }
}
