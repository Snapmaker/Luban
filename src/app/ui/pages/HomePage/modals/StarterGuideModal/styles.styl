.setting-modal {
    .lang-select .title-label {
        margin-bottom: 32px;
    }

    .lang-select {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .machine-select {
        display: flex;
        flex-direction: column;
        align-items: center;

        .machine-content {
            margin-top: 24px;
            width: 100%;
            display: flex;
            justify-content: space-evenly;
            align-items: center;

            .machine-image {
                max-width: 350px;
                display: flex;
                align-items: center;
                justify-content: space-between;

                svg {
                    border-radius: 8px;
                }

                > img {
                    width: 160px;
                }
            }

            .machine-info {
                min-width: 200px;

                .z-axis-select {
                    display: flex;
                    align-items: center;
                    font-size: 14px;
                    margin-bottom: 28px;

                    > input {
                        margin-right: 8px;
                        cursor: pointer;
                    }
                }

                .head-detail {
                    .tool-select {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                    }
                }
            }
        }
    }
}
