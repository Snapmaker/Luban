.manager-params-docs {
    min-width: 265px;

    img {
        width: 100% !important;
        height: auto;
    }

    &-content {
        color: #545659;

        h1 {
            font-size: 16px;
            color: #000000;
            font-weight: 700;
            line-height: 18.75px;
            margin-bottom: 16px;
        }

        h2, h3 {
            font-size: 14px;
            font-weight: 700;
            color: #000000;
        }
    }
}

.open-params-profile {
    .profile-params-show-icon {
        visibility: hidden;
    }

    &:hover {
        .profile-params-show-icon {
            visibility: visible;
        }
    }
}

.close-params-profile {
    .profile-params-show-icon {
        visibility: visible;
    }
}

.hidden-docs {
    width: 1px;
    min-width: 1px !important;
}

.manager-list {
    height: calc(100% - 56px);
    overflow: auto;
}

.manager-action {
    visibility: hidden;
}

.profile-li, .manager-btn {
    &.selected:hover {
        & > .manager-action {
            visibility: visible;
        }
    }
}

.config-value-box-wrapper {
    width: calc(100% - 294px);
}

.disable-li {
    pointer-events: none;
}

.preset-item {
    // preset actions on the right side
    .preset-actions {
        visibility: hidden;
    }

    &.selected:hover {
        .preset-actions {
            visibility: visible;
        }
    }
}
