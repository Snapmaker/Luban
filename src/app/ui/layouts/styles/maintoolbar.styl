.toolbar-container {
    width: 100%;
    background-color: #FFFFFF;

    .bar-items {
        display: inline-block;
        padding: 8px

        .bar-icon {
            height: 50px;
            min-height 50px;
            min-width: 64px;
            max-width: 96px;
            padding: 4px 2px 0;
            display: inline-block;
            text-align: center;
            &:hover {
                background #EEEFF0 !important;
            }
        }
        .bar-icon-for-long {
            height: 58px;
            max-width: 120px;
        }
        .separator {
            display: inline-block;
            width: 1.5px;
            background-color: #f5f5f7;
            vertical-align: top;
            height: 42px;
            margin: 4px 2px;
        }
    }

    .left {
        float: left;
        width: calc(100% - 380px);
        overflow: auto
    }
    .left::-webkit-scrollbar {
        display: none;
    }
    .right {
        float: right;
        width: 380px;
    }

    // machine settings
    .machine-settings-item {
        width: 360px;
        display: inline-block;
        height: 50px;
    }
}
.hover-background {
    &:hover {
        background: #EEEFF0;
    }
}

.action-title-for-long {
    font-size: 12px !important;
    white-space: normal;
    line-height: 12px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal !important;
    margin-top: 2px;
}
