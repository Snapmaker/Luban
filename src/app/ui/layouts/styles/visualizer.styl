@import "../../../styles/variables.styl"

.visualizer
    width: 100%
    // height: 'calc(100vh - %s)' % ($navbar-height)
    height 100vh
    .bottom-left-container
        position absolute
        bottom 0px
        max-width 216px
        max-height 45px
        z-index 21
        overflow auto
    .bottom-container  
        position absolute
        width 80%
        height 140px
        bottom 0px
        left 10%
        z-index 23 
    .bottom-right-container
        position absolute
        max-width 216px
        max-height 72px
        bottom 0px
        right 0px
        z-index 21
        overflow auto
    .center-left-container
        position absolute
        bottom 61px
        z-index 21
        max-height 180px
        max-width 504px
        overflow auto
    .center-container
        width 100%
        height: 100vh
        z-index -1
    .center-right-container
        position absolute
        bottom 50%
        right 0px
        z-index 21
        width 18%
        max-width 259.2px
        max-height 540px
        transform translateY(50%)
        overflow auto
    .top-container  
        position absolute
        top 'calc(10px + %s)' % ($navbar-height)
        z-index 22
        max-width 640px
        min-height 40px
        left 50%
        transform translateX(-50%)
    .top-right-container
        position absolute
        top $navbar-height
        right 0px
        z-index 21
        max-width 570px
        max-height 270px
        overflow auto
