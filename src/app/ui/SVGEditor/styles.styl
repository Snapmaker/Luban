@import "../widgets/styles.styl"
@import "../../styles/global.styl"

//
// keep layout style the same as laser container
// we will refactor them together later. 20190820
//
.laser-table {
    width: 100%;
    height: 'calc(100vh - %s)' % (66px);
}
[class~='appbar'] {
    .laser-table {
        width: 100%;
        height: calc(100vh - 90px);
    }
    .svg-content {
        height: calc(100vh - 90px);
    }
}
.laser-table-row {
}

.view-space {
  position: relative;
}

.control-bar
    display: table-cell
    width: 360px
    min-width: 360px
    max-width: 360px
    right: 0
    padding: 10px 6px
    background-color: #f6f7f8

//
// SVG Editor styles
//
.svg-content
    background-color: #f5f5f7
    position: relative
    width: 100%
    padding-left: 64px
    // height: 100%
    height: calc(100vh - 66px)

.svg-control-bar
    //position: relative
    margin-bottom: 20px

.palette-item
    height: 20px
    width: 20px
    float: left

.svg-left-bar
    position: absolute
    left: $px-grade-4
    top: $px-grade-4
    bottom: $px-grade-4
    font-size: 16px
    font-weight: bold
    background-color: #fff!important;
    border-radius: $px-grade-4;

    .online-libary
        font-weight: 400
        border-bottom: 1px $black-5 solid
        svg
            fill: #545659


    .selected
        background-color: #E7F3FF!important;
        svg {
          fill: #1890ff;
          background-color: #e6f2fd !important;
        }
    .btn-round
        background: url("../../resources/images/224x224/toolbar_round _unchecked_224x224.png") no-repeat 0 0
        background-size: 100%


    .center-tool
        background-color: #fff
        > button
            background-color: #fff
        > button:hover
            background: #EEEFF0;

    //todo refactor
    .center-tool,
    .center-ext
        .btn-center-ext,
