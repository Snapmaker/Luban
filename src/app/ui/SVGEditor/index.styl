@import "../../widgets/styles.styl"

//
// keep layout style the same as laser container
// we will refactor them together later. 20190820
//
.laser-table {
    display: table;
    width: 100%;
    height: 'calc(100vh - %s)' % (50px);
}
.laser-table-row {
    display: table-row;
}

.view-space {
  position: fixed;
  left: $sidebar-width
  right: 360px;
  top: 50px;
  bottom: 32px;
  border-right: 1px solid #ccc;
  display: table-cell;
}

.control-bar
    display: table-cell
    width: 360px
    min-width: 360px
    max-width: 360px
    right: 0
    padding: 10px 6px
    background-color: #f6f7f8

//
// SVG Editor styles
//
$padding = 10px

.svg-content
    background-color: #fafafa
    position: relative
    width: 100%
    height: 100%

.svg-control-bar
    //position: relative
    margin-bottom: 20px

.palette-item
    height: 20px
    width: 20px
    float: left


.visualizer-center
    position: absolute
    left: $visualizer-padding
    top: 50%

    .center-tool,
    .center-ext
        z-index: $z-index-float
        position: absolute
        transform: translate(0, -50%)
        border: 1px solid $grey-color2

        .btn-center-ext,
        .btn-center
            display: block
            position: relative
            width: 56px
            height: 56px
            padding: 0
            border: 0
            background-color: $background-color

            &.selected
                //background-color: #cbe3f9
                background-color: #e6f2fd

            &:hover
                background-color: #e6f2fd


            > i
                display: block
                height: 100%
                width: 100%
                background-size: 100%

            .btn-select
