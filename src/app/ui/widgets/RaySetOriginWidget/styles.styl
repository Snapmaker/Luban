
.control-panel {
    button[class^='jog-btn'], button[class*=' jog-btn'] {
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid #B9BCBF;
        font-size: 16px;
        padding: 0;
        min-width: 32px;
        line-height: 30px;
        text-align: center;
        vertical-align: middle;
        box-shadow: 1px 1px 2px rgba(0, 0, 0, .1);

        &:active, &.active {
            box-shadow: 0 0 2px rgba(0, 0, 0, .1);
            transform: translate(1px, 1px);
        }

        &:disabled {
            color: #aaa;
        }
    }
}