// Coordinate Panel
.coordinate-panel {
    :global {
        .table th, .table td {
            padding: .5rem;
        }

        .table th {
            font-size: 11px;
            // white-space: nowrap;
            text-align: right;
            line-height: 100%;
            word-wrap: break-word;
        }
    }

    .field-axis {
        position: relative;
        width: 1%;
        font-size: 24px;
        text-align: center;
        vertical-align: middle;
    }

    .field-position {
        position: relative;
        text-align: right;
        white-space: nowrap;
        width: 48%;

        .integer-part, .decimal-point, .fractional-part {
            font-size: 24px;
        }

        .integer-part {
            width: 90px;
            text-align: right;
        }

        .unit {
            font-size: 12px;
            position: absolute;
            right: 5px;
            bottom: 0;
        }
    }

    .action {
        width: 1%;
        padding: 0 .5rem;
        text-align: center;
    }
}

// Control Panel
.control-panel {
    .jog-pad {
        .column-5 {
            flex: 0 0 auto;
        }

        .column-4 {
            flex: 0 0 auto;
        }

        button[class^='jog-'], button[class*=' jog-'] {
            background-color: #fff;
            border-radius: 8px;
            border: 1px solid #B9BCBF;
            font-size: 16px;
            padding: 0;
            min-width: 32px;
            line-height: 30px;
            text-align: center;
            vertical-align: middle;
            box-shadow: 1px 1px 2px rgba(0, 0, 0, .1);

            &:active, &.active {
                box-shadow: 0 0 2px rgba(0, 0, 0, .1);
                transform: translate(1px, 1px);
            }

            &:disabled {
                color: #aaa;
            }
        }

        .jog-direction-highlight {
            button[class^='jog-'], button[class*=' jog-'] {
                background-color: rgba(240, 240, 240, .8);
                box-shadow: 1px 1px 2px rgba(0, 0, 0, .2);
                border-color: rgba(0, 0, 0, .4);

                &:hover {
                    background-color: rgba(0, 0, 0, .1);
                }

                &:active, &.active {
                    box-shadow: 0 0 2px rgba(0, 0, 0, .2);
                    transform: translate(1px, 1px);
                }
            }

            .jog-text {
                font-weight: 500;
            }
        }
    }
}

.operation-dropdown-icon {
    display: flex;
    align-items: center;
}
