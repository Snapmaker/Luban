.btn-3btns {
    width: 189px;
    margin-left: -9px;
    float: right;

    button {
        height: 30px;
        width: 63px;
        border-width: 1px;
        border-style: solid;
        border-color: #DDDDDD;
        line-height: 1.42857143;
        vertical-align: middle;
        margin-top: 1px;
        font-size: 10px;
        text-align: center;

        &:first-child {
            border-bottom-left-radius: 4px;
            border-top-left-radius: 4px;
            border-right: 0;
        }

        &:last-child {
            border-bottom-right-radius: 4px;
            border-top-right-radius: 4px;
            border-left: 0;
        }

        &.active {
            color: #FFFFFF;
            background-color: #4A4A4A;
        }

        &.passive {
            color: #888888;
            background-color: #FFFFFF;
        }

        &.disabled {
            opacity: .6;
        }
    }
}

.disabled-btns {
    pointer-events: none;
    opacity: .5;
}

.life-length {
    width: 189px;
    margin-left: -9px;
    float: right;
    height: 30px;
    border: 1px solid #DDDDDD;
    border-radius: 4px;
    line-height: 1.42857143;
    margin-bottom: 0;
    font-size: 10px;
    text-align: center;
    padding: 3px 5px;

    span {
        width: 56px;
        height: 22px;

        &:first-child {
            float: left;
        }

        &:last-child {
            float: right;
        }

        &.active {
            background: #F4F4F4;
        }
    }
}

.notice {
    height: 16px;
    font-size: 14px;
    font-weight: 400;
    color: #D9534F;
    line-height: 16px;
}
