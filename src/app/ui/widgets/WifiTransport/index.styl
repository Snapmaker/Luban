@import "../../../styles/variables.styl"


.icon-24
    display: inline-block
    width: 24px
    height: 24px

.icon-plus
    background-image: url("../../../resources/images/24x24/ic_plus_24x24.png")

.icon-tick
    background-image: url("../../../resources/images/24x24/ic_wifi_selected_straight.png")

.gcode-file {
    display: block
    position: relative
    // border: 1px solid
    // border-color: $grey-color2
    // border-radius: $border-radius
    height: 64px
    padding: 8px
    margin-top: 4px

    &:focus {
        outline: 0
    }

    &.selected {
        // border-color: $blue-color
        background #F5F5F7
    }

    // .gcode-file-img {
    //     // height: 48px;
    //     // width: 48px;
    //     border: 1px solid #B9BCBF;
    //     border-radius 4px
    //     > img {
    //         height: 48px;
    //         width: 48px;
    //     }
    // }
    .gcode-file-selected-icon {
        width: 24px
        height: 24px
        position: absolute
        right: 0
        bottom: 0
        background-image: url("../../../resources/images/24x24/ic_wifi_selected_straight.png")
        background-size: 24px
    }

    &-remove {
        display: none
        background-image: url("../../../resources/images/24x24/ic_wifi_remove_straight.jpg")
        background-color: transparent
        width: 24px
        height: 24px
        background-size: 24px
        position: absolute;
        right: 0;
        top: 0;
        border: 0;
    }

    &-img {
        display: inline-block
        height: 100%
        width: 48px
        vertical-align: top
        margin-right: 6px
        border 1px solid #B9BCBF
        border-radius 4px

        img {
            height: 100%
            width: 45px
        }
    }

    &-input-name {
        opacity: 0
        position: absolute

        &.haveOpacity {
            opacity: 1
            z-index: 3
        }
        &:focus {
            outline: none;
        }
    }

    &-text {
        display: inline-block
        position: relative
        height: 100%
        width: 60%
        white-space: nowrap

        &-rename {
            display: inline-block
            cursor: text
            width: 100%
            .prefix-name {
                display: inline-block
                vertical-align: middle
                max-width: 60%
                overflow: hidden
                white-space: nowrap
                text-overflow: ellipsis
            }

            .suffix-name {
                display: inline-block
                vertical-align: middle
            }
            &:focus {
                outline none
            }
        }

        &-name {
            opacity: 0
            position: absolute
            width: 180px
            font-size: 14px
            z-index: 2

            &.haveOpacity {
                opacity: 1
                z-index: 3
            }
        }

        &-info {
            position: absolute
            bottom: 0
            font-size: 12px
            color: $grey-color
            vertical-align: bottom

            span {
                margin-right: 12px
            }
        }
    }
}

.gcode-file:hover .gcode-file-remove {
    display: block
}

.gcode-file:hover .gcode-file-rename {
    opacity: 1
}
.import-btn-dashed {
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
}
