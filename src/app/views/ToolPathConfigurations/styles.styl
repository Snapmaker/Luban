@import "../../styles/variables"
.material-select {
    width: 86%;
    display: inline-block;
    vertical-align: middle;
    margin-bottom: 10px;
}
.manager-icon {
    width: 30px;
    height: 30px;
    margin-bottom: 10px;
    background: #FFFFFF;
    border-radius: 4px;
    border: 1px solid #C8C8C8;
    display: inline-block;
    vertical-align: middle;
    margin-left: 11px;
    background: url("../../images/18x18/printing-manager_18x18@2x.png") no-repeat center/18px 18px
}
.separator
    display: block
    margin: 10px 0
    padding: 0
    height: 1px
    border: 0;
    border-top: 1px solid $border-color


.laser-modes
    // cancel out last laser-mode right padding
    margin: 0 -10px 0 0

    .laser-mode
        display: inline-block
        vertical-align: top
        padding: 0 10px 0 0
        width: 25%

        &__btn
            display: block
            border-radius: $border-radius
            border: 1px solid $grey-color2

            > i
                display: block
                border-radius: $border-radius
                width: 100%
                height: 68px

            > img
                border-radius: $border-radius
                width: 100%
                height: 68px

        &__icon-greyscale
            background: url("../../images/cnc-laser/laser-mode-greyscale-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-vector
            background: url("../../images/cnc-laser/laser-mode-vector-88x88.png") no-repeat 0 0
            background-size: 100%
        &__icon-text
            background: url("../../images/cnc-laser/laser-mode-text-88x88.png") no-repeat 0 0
            background-size: 100%

        &__text
            margin-top: 8px
            float: left
            width: 100%
            text-align: center
            vertical-align: top

        &.selected
            .laser-mode__btn
                border: 2px solid $dark-blue-color
            .laser-mode__text
                color: $dark-blue-color

.manager-body {
    text-align: left;
    .manager-type-wrapper {
        padding: 0 20px
        border-bottom: 1px #c8c8c8 solid
        text-align: left
        .manager-type {
            display: inline-block
            line-height: 25px
            padding-bottom: 9px
            height: 36px;
            font-size: 18px;
            font-family: PingFangSC-Medium, PingFang SC;
            font-weight: 500;
            &.selected {
                color: #28A7E1;
                border-bottom: 2px #28A7E1 solid;
            }
        }
    }
    .manager-content {
        padding: 20px;
        .manager-name {
            width: 36%
            margin-right: 10px
            display: inline-block
            vertical-align: top
            .manager-name-wrapper {
                list-style: none
                background: #FFFFFF;
                padding: 0;
                margin: 0;
                height: 363px;
                overflow-y: scroll;
                border: 1px solid #c8c8c8;
                border-bottom: 0px;
                .manager-btn {
                    display: inline-block
                    height: 32px
                    line-height: 32px;
                    padding-left: 10px;
                    width: 100%;
                    text-align: left;
                    &.selected {
                        background: #E6F2FD;
                    }
                }
            }
            .manager-file {
                width: 50%;
                border-radius: 0;
                &:hover {
                    color: #28A7E1
                }
            }
        }
        .manager-details {
            width: 62%
            height: 393px;
            overflow-y: scroll;
            display: inline-block;
            border: 1px solid #c8c8c8;
            padding: 10px 10px 20px;
            text-align: left
        }
    }
    .manager-settings {
        padding: 0 20px;
        background: #F6F7F8;
        .manager-settings-btn {
            padding: 9px 0;
            a {
                box-sizing: content-box;
                height: 24px;
                line-height: 24px;
                padding: 5px 30px
            }
        }
        .manager-settings-operate {
            float: left;
        }
        .manager-settings-save {
            float: right;
        }
    }
}
