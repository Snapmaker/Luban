@import "global-var";

// display
.display-none {
    display: none;
}
.display-inline {
    display: inline-block;
}
.display-block {
    display: block;
}

.overflow-x-hidden {
    overflow-x: hidden
}
.overflow-y-hidden {
    overflow-y: hidden
}
.overflow-y-auto {
    overflow-y: auto
}

.float-r{
    float: right;
}
.float-l{
    float: left;
}

// position
.position-re {
    position: relative;
}
.position-ab {
    position: absolute;
}
.top-left-16 {
    top: $px-grade-8;
    left: $px-grade-8;
}
.left-0 {
    left: 0;
}
.left-16 {
    left: $px-grade-8;
}
.top-100 {
    bottom: 100px;
}
.bottom-0 {
    bottom: 0!important;
}
.bottom-8 {
    bottom: 8px;
}
.bottom-10 {
    bottom: 10px;
}
.bottom-16 {
    bottom: 16px;
}
.bottom-56 {
    bottom: 56px;
}
.bottom-64 {
    bottom: 64px;
}
// width & hight
.width-16 {
    width: $px-grade-8;
}
.height-16 {
    height: $px-grade-8;
    line-height: $px-grade-8;
}
.width-24 {
    width: $px-grade-12;
}
.height-24 {
    height: $px-grade-12;
    line-height: $px-grade-12;
}
.width-32 {
    width: $px-grade-16;
}
.height-32 {
    height: $px-grade-16;
    line-height: $px-grade-16;
}
.width-40 {
    width: $px-grade-20;
}
.height-40 {
    height: $px-grade-20;
    line-height: $px-grade-20;
}
.width-44 {
    width: 44px;
}
.width-56 {
    width: $px-grade-28;
}
.height-56 {
    height: $px-grade-28;
    line-height: $px-grade-28;
}
.width-64 {
    width: $px-grade-32;
}
.height-64 {
    height: $px-grade-32;
    line-height: $px-grade-32;
}
.width-72 {
    width: $px-grade-36;
}
.height-72 {
    height: $px-grade-36;
    line-height: $px-grade-36;
}
.width-80 {
    width: $px-grade-40;
}
.height-80 {
    height: $px-grade-40;
    line-height: $px-grade-40;
}
.width-96 {
