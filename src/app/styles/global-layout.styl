@import "global-var";

// display
.display-none {
    display: none;
}
.display-inline {
    display: inline-block;
}
.display-flex {
    display: flex;
}
.display-block {
    display: block;
}

.float-r{
    float: right;
}
.float-l{
    float: left;
}

// position
.position-re {
    position: relative;
}
.position-ab {
    position: absolute;
}
.top-100 {
    bottom: 100px;
}
.bottom-0 {
    bottom: 0!important;
}
.bottom-8 {
    bottom: 8px;
}
.bottom-10 {
    bottom: 10px;
}
.bottom-56 {
    bottom: 56px;
}

// width & hight
.width-24 {
    width: $px-grade-12;
}
.width-32 {
    width: $px-grade-16;
}
.height-32 {
    height: $px-grade-16;
    line-height: $px-grade-16;
}
.width-44 {
    width: 44px;
}
.width-56 {
    width: $px-grade-28;
}
.height-56 {
    height: $px-grade-28;
    line-height: $px-grade-28;
}
.width-64 {
    width: $px-grade-32;
}
.height-64 {
    height: $px-grade-32;
    line-height: $px-grade-32;
}
.width-80 {
    width: $px-grade-40;
}
.height-80 {
    height: $px-grade-40;
    line-height: $px-grade-40;
}
.width-96 {
    width: $px-grade-48;
}
.height-96 {
    height: $px-grade-48;
    line-height: $px-grade-48;
}
.width-100 {
    width: 100%;
}
.height-100 {
    height: 100%;
}
.width-auto {
    width: auto!important;
}
.height-auto {
    height: auto!important;
}
