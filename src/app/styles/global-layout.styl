@import "global-var";

// display
.display-none {
    display: none;
}
.display-inline {
    display: inline-block;
}
.display-block {
    display: block;
}

// flex
.flex-direction-c {
    flex-direction: column;
}

.flex-direction-r {
    flex-direction: row;
}

.flex-justify-content-center {
    justify-content: center;
}

.flex-justify-content-between {
    justify-content: space-between;
}

.flex-justify-content-around {
    justify-content: space-around;
}

.flex-justify-content-start {
    justify-content: flex-start;
}

.flex-justify-content-end {
    justify-content: flex-end;
}

.flex-wrap {
    flex-wrap: wrap;
}

.flex-nowrap {
    flex-wrap: nowrap;
}

.flex-align-items-center {
    align-items: center;
}

.flex-align-items-start {
    align-items: flex-start;
}

.flex-align-items-end {
    align-items: flex-end;
}

.float-r{
    float: right;
}
.float-l{
    float: left;
}

// position
.position-re {
    position: relative;
}
.position-ab {
    position: absolute;
}
.top-100 {
    bottom: 100px;
}
.bottom-0 {
    bottom: 0!important;
}
.bottom-8 {
    bottom: 8px;
}
.bottom-10 {
    bottom: 10px;
}
.bottom-16 {
    bottom: 16px;
}
.bottom-56 {
    bottom: 56px;
}
.bottom-64 {
    bottom: 64px;
}

// width & hight
.width-16 {
    width: $px-grade-8;
}
.height-16 {
    height: $px-grade-8;
    line-height: $px-grade-8;
}
.width-24 {
    width: $px-grade-12;
}
.height-24 {
    height: $px-grade-12;
    line-height: $px-grade-12;
}
.width-32 {
    width: $px-grade-16;
}
.height-32 {
    height: $px-grade-16;
    line-height: $px-grade-16;
}
.width-40 {
    width: $px-grade-20;
}
.height-40 {
    height: $px-grade-20;
    line-height: $px-grade-20;
}
.width-44 {
    width: 44px;
}
.width-56 {
    width: $px-grade-28;
}
.height-56 {
    height: $px-grade-28;
    line-height: $px-grade-28;
}
.width-64 {
    width: $px-grade-32;
}
.height-64 {
    height: $px-grade-32;
    line-height: $px-grade-32;
}
.width-72 {
    width: $px-grade-36;
}
.height-72 {
    height: $px-grade-36;
    line-height: $px-grade-36;
}
.width-80 {
    width: $px-grade-40;
}
.height-80 {
    height: $px-grade-40;
    line-height: $px-grade-40;
}
.width-96 {
    width: $px-grade-48;
}
.height-96 {
    height: $px-grade-48;
    line-height: $px-grade-48;
}
.height-176 {
    height: $px-grade-88;
    line-height: $px-grade-88;
}
.width-100 {
    width: 100%;
}
.height-100 {
    height: 100%;
}
.width-all-minus-24 {
    width: calc(100% - 24px)
}

.width-auto {
    width: auto!important;
}
.height-auto {
    height: auto!important;
}
