@import "global-var";

// display
.display-none {
    display: none;
}
.display-inline {
    display: inline-block;
}
.display-flex {
    display: flex;
}
.display-block {
    display: block;
}

// position
.position-re {
    position: relative;
}
.position-ab {
    position: absolute;
}

// width & hight
.width-56 {
    width: $px-grade-night;
}
.height-56 {
    height: $px-grade-night;
}
.width-100 {
    width: 100%;
}
.height-100 {
    height: 100%;
}