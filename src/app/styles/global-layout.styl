}
.width-half {
    width: 50%
}
.width-100 {
    width: 100%;
}
.height-100 {
    height: 100%;
}
.width-all-minus-24 {
    width: calc(100% - 24px)
}

.width-auto {
    width: auto!important;
}
.height-auto {
    height: auto!important;
}
