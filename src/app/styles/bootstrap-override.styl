// Bootstrap Override
th {
    font-weight: normal;
}
label {
    font-weight: normal;
}

// Nav
.navbar-brand {
    text-decoration: none;
}
.nav > li > a {
    font-size: 14px;
    text-decoration: none;
}

// font-size
.btn,
.dropdown-header,
.dropdown-menu,
.form-control {
    font-size: 13px;
}

// line-height
.checkbox label,
.radio label {
    line-height: 20px;
}

// table
table thead > tr > th,
table tbody > tr > td {
    text-align: left;
    padding: 2px 4px;
}

.table-bordered > thead > tr > td,
.table-bordered > thead > tr > th {
    border-bottom-width: 1px;
}

// v4
button:focus {
    outline: 0;
}
