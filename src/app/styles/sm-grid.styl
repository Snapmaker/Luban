.sm-grid {
    display: grid;
}
.grid-column-gap-32 {
    grid-column-gap: $px-grade-16;
}
.grid-row-gap-16 {
    grid-row-gap: $px-grade-8;
}
.grid-row-gap-60 {
    grid-row-gap: $px-grade-30;
}
.grid-template-columns-for-machine-settings {
    grid-template-columns: repeat(auto-fill, minmax(296px, 1fr));
}
.grid-template-columns-for-material-settings {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
}
.grid-template-columns-for-machine-settings-small-screen {
    grid-template-columns: repeat(auto-fill, minmax(250px, 296px));
}
.grid-template-row-for-machine-settings {
    grid-template-rows: repeat(auto-fill, minmax(198px, 16.25vw));
}
